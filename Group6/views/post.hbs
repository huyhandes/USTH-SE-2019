<header class="masthead" style="background-image: url('img/{{this.id}}.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          {{# each items}}
          <div class="post-heading">
            <h1>{{this.title}}</h1>
            <h2 class="subheading">{{this.subtitle}}</h2>
            <span class="meta">Posted by admin on {{this.postedtime}}</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <p>
              {{this.substance}}
            {{/each}}
          </p>
        </div>
      </div>
    </div>
  </article>