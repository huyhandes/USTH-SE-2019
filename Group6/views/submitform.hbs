<link type="text/css" rel="stylesheet" href="/css/all.css"/>
<link type="text/css" rel="stylesheet" href="/vendor/bootstrap/css/bootstrap.min.css"/>
<body>
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Article Post</h5>
            <form action="/submit" method="post">
              <div class="form-label-group">
                <input type="text" id="title" class="form-control" placeholder="Title" required autofocus>
                <label for="title">Title</label>
              </div>

              <div class="form-label-group">
                <input type="text" id="subtitle" class="form-control" placeholder="Subtitle" required autofocus>
                <label for="subtitle">Subtitle</label>
              </div>

              <div class="form-label-group">
                <input type="text" id="director" class="form-control" placeholder="Director" required autofocus>
                <label for="director">Director</label>
              </div>

              <div class="form-label-group">
                <input type="text" id="cast" class="form-control" placeholder="Cast" required autofocus>
                <label for="cast">Cast</label>
              </div>

              <div class="form-label-group">
                <input type="text" id="rated" class="form-control" placeholder="Rated" required autofocus>
                <label for="rated">Rated</label>
              </div>

              <div class="form-label-group">
                <input type="text" id="type" class="form-control" placeholder="Type" required autofocus>
                <label for="type">Type</label>
              </div>
              
              <div class="form-label-group">
                <input type="text" id="duration" class="form-control" placeholder="Duration" required autofocus>
                <label for="duration">Duration</label>
              </div>
              
              <div class="form-label-group">
                <input type="text" id="postedtime" class="form-control" placeholder="Postedtime" required autofocus>
                <label for="postedtime">Postedtime</label>
              </div>
              
              <div class="form-label-group">
                <input type="text" id="content" class="form-control" placeholder="Content" required autofocus>
                <label for="content">Content</label>
              </div>
              <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript" src="vendor/bootstrap/jquery/jquery.min.js"></script>
</body>